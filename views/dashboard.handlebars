<section class="py-3">
    <h2>Create a New Post!</h2>

    <form class="new-post-form">
        <div class="p-2">
            <label for="post-title">Post Title:</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div class="p-2">
            <label for="post-text">Post Text:</label>
            <input type="text" id="post-text" name="post-text" />
        </div>
        <button type="submit" class="btn btn-secondary">Create</button>
    </form>
</section>

{{#if posts.length}}
<section class="py-5">
    <h2>All of Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li class="border p-2 my-4">
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}
<script src="/javascript/add-post.js"></script>